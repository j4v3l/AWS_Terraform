# CIDR block for the entire VPC  
vpc_cidr_block = "10.0.0.0/16"

# CIDR blocks for private subnets within the VPC  
private_subnets_cidr_blocks = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]

# CIDR blocks for public subnets within the VPC  
public_subnets_cidr_blocks = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

# Environment prefix to differentiate resources (e.g., dev, staging, prod)  
env_prefix = "dev"

# Availability Zone for the resources  
avail_zone = "us-east-2a"

# AMI image name pattern to use for the EC2 instance  
image_name = "amzn2-ami-hvm-*-x86_64-gp2"

# EC2 instance type  
instance_type = "t2.micro"

# IP address allowed for SSH access (0.0.0.0/32 allows only the specified IP)  
my_ip = "0.0.0.0/32"

# Path to the public key for SSH access  
public_key_location = "~/.ssh/id_rsa.pub"

# Path to the private key (commented out for security reasons)  
# private_key_location = "~/.ssh/id_rsa"

# CIDR block for a specific subnet  
subnet_cidr_block = "10.0.1.0/24"